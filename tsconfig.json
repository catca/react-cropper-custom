{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "target": "es5",
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "paths": {
      "@components/*": ["src/components/*"],
      "@style/*": ["src/style/*"],
      "@hooks/*": ["src/hooks/*"], 
      "@utils/*": ["src/utils/*"],
      "@src/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}